<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" method="post">

    <label>Name: </label>
    <input type="text" name="name" value="{{name}}">
    <p>
    <label>Propellers: </label>
    <input type="text" name="propellers" value="{{propellers}}">
    </p>
    <label>Max. Speed: </label>
    <input type="text" name="maxSpeed" value="{{maxSpeed}}">
    
    <p><button type="submit">Enviar</button></p>

    
</form>